<script>
    function valueMapperCompany(options) {
        $.ajax({
            url: "@Url.Action("Company_Read_ValueMapper", "CompanyAnnualMeeting")",
            data: convertValues(options.value),
            success: function (data) {
                options.success(data);
            }
        });
    }

    function valueMapperBoardofDirectorsLegalMember(options) {
        $.ajax({
            url: "@Url.Action("BoardofDirectorsLegalMember_Read_ValueMapper", "CompanyAnnualMeeting")",
            data: convertValues(options.value),
            success: function (data) {
                options.success(data);
            }
        });
    }

    function valueMapperAgent(options) {
        $.ajax({
            url: "@Url.Action("Agent_Read_ValueMapper", "CompanyAnnualMeeting")",
            data: convertValues(options.value),
            success: function (data) {
